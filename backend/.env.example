# Backend Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=university_app
DB_LOGGING=true
DB_SYNCHRONIZE=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_PUBLIC_KEY=
JWT_PRIVATE_KEY=
JWT_EXPIRES_IN=1h
JWT_ALGORITHM=RS256

# SAML Configuration
SAML_ENABLED=true
SAML_ENTRY_POINT=https://idp.example.com/saml/sso
SAML_ISSUER=university-app
SAML_CALLBACK_URL=http://localhost:3000/api/v1/auth/saml/callback
SAML_CERT=
SAML_LOGOUT_URL=https://idp.example.com/saml/logout

# Okta Configuration
OKTA_DOMAIN=your-domain.okta.com
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_REDIRECT_URI=http://localhost:3000/api/v1/auth/okta/callback

# Azure AD Configuration
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/v1/auth/azure/callback

# Session
SESSION_TIMEOUT=1800
MAX_SESSIONS_PER_USER=5

# Security
BCRYPT_ROUNDS=12
MFA_WINDOW=2
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOGROCKET_APP_ID=

# AWS (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_CLOUDWATCH_LOG_GROUP=

# Frontend URL
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@university.edu
